<Window x:Class="Invert.Invert_Cabinet"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Invert"
        mc:Ignorable="d"
        Title="Инвентаризация" Width="1057" Loaded="Window_Loaded">
    <Grid>
        <TabControl Margin="0,1,0,0" Background="#FFFFFCFC" >
            <TabItem Header="Кабинеты">
                <Canvas Margin="0,0,-9,0">
                    <DataGrid Name="Cou_Schedule" HorizontalAlignment="Left" Height="436" AutoGenerateColumns="False" VerticalAlignment="Top" Width="634" Canvas.Top="5" FontSize="12">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Cou_Date_Schedule.date_sch,StringFormat={}{0:dd.MM.yyyy}}" Header="Дата" Width="100"/>
                            <DataGridTextColumn Binding="{Binding time_sch}" Header="Время" Width="110"/>
                            <DataGridTextColumn Binding="{Binding Cou_Group.number}" Header="Группа" Width="80"/>
                            <DataGridTextColumn Binding="{Binding Cou_Teacher_Predmet.Cou_Predmet.name_p}" Header="Предмет" Width="120"/>
                            <DataGridTextColumn Binding="{Binding Cou_Teacher_Predmet.Cou_Teacher.last_name}" Header="Преподаватель" Width="120"/>
                            <DataGridTextColumn Binding="{Binding cabinet}" Header="Кабинет" Width="110"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ComboBox  Name="Cb_Sch_date" materialDesign:HintAssist.Hint="Дата" Canvas.Left="743" Canvas.Top="111" Width="142"  DisplayMemberPath="date_sch" ItemStringFormat="{}{0:dd.MM.yyyy}" SelectionChanged="Cb_Sch_date_SelectionChanged"/>
                </Canvas>
            </TabItem>
            <TabItem Header="Студенты">
                <Canvas>
                    <DataGrid Name="Cou_Student" HorizontalAlignment="Left" Height="437" AutoGenerateColumns="False" VerticalAlignment="Top" Width="619" Canvas.Top="4">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding last_name}" Header="Фамилия" Width="160"/>
                            <DataGridTextColumn Binding="{Binding first_name}" Header="Имя" Width="110"/>
                            <DataGridTextColumn Binding="{Binding middle_name}" Header="Отчество" Width="150"/>
                            <DataGridTextColumn Binding="{Binding Cou_Group.number}" Header="Группа" Width="1*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox  Name="Student_last" materialDesign:HintAssist.Hint="Фамилия" TextWrapping="Wrap" Width="141" Canvas.Left="731" Canvas.Top="139"/>
                    <TextBox  Name="Student_first" materialDesign:HintAssist.Hint="Имя" TextWrapping="Wrap"  Width="141" Canvas.Left="731" Canvas.Top="174"/>
                    <TextBox  Name="Student_middle" materialDesign:HintAssist.Hint="Отчество" TextWrapping="Wrap"  Width="141" Canvas.Left="731" Canvas.Top="208"/>
                    <ComboBox  Name="Cb_S_group" materialDesign:HintAssist.Hint="Группа" Canvas.Left="731" Canvas.Top="244" Width="141" DisplayMemberPath="number" SelectionChanged="Cb_S_group_SelectionChanged"/>
                    <Button Content="Добавить" Height="28" Width="112" Canvas.Left="646" Canvas.Top="338"  Click="Student_Insert"/>
                    <Button Content="Изменить" Height="28" Width="112" Canvas.Left="776" Canvas.Top="338" Click="Student_Update"/>
                    <Button Content="Удалить" Height="28" Width="112" Canvas.Left="907" Canvas.Top="338" Click="Student_Delete"/>
                    <Button Content="+" Height="38" Width="42" Canvas.Left="885" Canvas.Top="242"  Click="Student_Group_Add"  FontSize="18" Background="#FF673AB7" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold" FontFamily="Times New Roman"/>
                </Canvas>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
